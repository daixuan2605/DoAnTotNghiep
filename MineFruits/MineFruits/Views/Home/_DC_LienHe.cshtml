@model MineFruits.Models.Account

@if (Session["TaiKhoan"] != null)
{
    <div class="row">
        <div class="col-lg-6 col-md-6">
            <input type="text" name="Ten" id="txtName" value="@Model.Name" placeholder="Họ tên*">

        </div>
        <div class="col-lg-6 col-md-6">
            <input type="text" name="SoDT" id="txtPhone" value="@Model.PhoneNumber" placeholder="Số điện thoại*">
        </div>
        <div class="col-lg-6 col-md-6">
            <input type="email" name="Email" id="txtEmail" value="@Model.Email" placeholder="Email*">
        </div>
        <div class="col-lg-6 col-md-6">
            <input type="text" name="DiaChi" id="txtAddress" placeholder="Địa chỉ*">
        </div>
        <div class="col-lg-12 text-center">
            <textarea name="NoiDung" id="txtContent" placeholder="Nhập nội dung*"></textarea>
            @*<button type="submit" id="btnSend" class="site-btn">Gửi liên hệ</button>*@
        </div>
    </div>
}
else
{
<div class="row">
    <div class="col-lg-6 col-md-6">
        <input type="text" name="Ten" id="txtName" placeholder="Họ tên*">

    </div>
    <div class="col-lg-6 col-md-6">
        <input type="text" name="SoDT" id="txtPhone" placeholder="Số điện thoại*">
    </div>
    <div class="col-lg-6 col-md-6">
        <input type="email" name="Email" id="txtEmail" placeholder="Email*">
    </div>
    <div class="col-lg-6 col-md-6">
        <input type="text" name="DiaChi" id="txtAddress" placeholder="Địa chỉ*">
    </div>
    <div class="col-lg-12 text-center">
        <textarea name="NoiDung" id="txtContent" placeholder="Nhập nội dung*"></textarea>
        @*<button type="submit" id="btnSend" class="site-btn">Gửi liên hệ</button>*@
    </div>
</div>
}
