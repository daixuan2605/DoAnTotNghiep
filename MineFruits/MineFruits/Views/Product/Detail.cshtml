@model MineFruits.Models.Product
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg">
    <img src="~/wwwroot/images/breadcrumb.jpg" />
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Vegetable’s Package</h2>
                    <div class="breadcrumb__option">
                        <a href="@Url.Action("Index","Home")">Home</a>
                        <a href="#">Trái cây</a>
                        <span>Chi tiết sản phẩm</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Product Details Section Begin -->
<section class="product-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="product__details__pic">
                    <div class="product__details__pic__item">
                        <img class="product__details__pic__item--large" src="@Url.Content("~/wwwroot/images/product/" + @Model.Image)" alt="product">
                    </div>
                    
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="product__details__text">
                    <h3>@Model.ProductName</h3>
                    <div class="product__details__price">@string.Format("{0:#,##}", Model.Price) VND</div>
                    <ul>
                        <li><b>Thương hiệu:</b> <span>@Model.Brand.BrandName</span></li>
                        <li><b>Trọng lượng:</b> <span>@Model.Weight</span></li>
                        <li><b>Xuất xứ:</b> <span>@Model.Origin</span></li>
                        <li>
                            <b>
                                Tình trạng:
                            </b> 
                            <span>
                                @if (Model.Amount > 0)
                                {
                                    <label style="padding: 0px 15px; color: white; background-color: #11b76b; border-radius: 5px">Còn hàng</label>
                                }
                                else
                                {
                                    <label style="padding: 0px 15px; color: white; background-color: #dd2222; border-radius: 5px">Hết hàng</label>
                                }
                            </span>
                        </li>
                        <li>
                            <b>Share on</b>
                            <div class="share">
                                <a href="#"><i class="fa fa-facebook"></i></a>
                                <a href="#"><i class="fa fa-twitter"></i></a>
                                <a href="#"><i class="fa fa-instagram"></i></a>
                                <a href="#"><i class="fa fa-pinterest"></i></a>
                            </div>
                        </li>
                    </ul>
                    <br/>
                    <div class="product__details__quantity">
                        <div class="quantity">
                            <div class="pro-qty">
                                <input type="text" value="1">
                            </div>
                        </div>
                    </div>
                    <a href="/Checkout/Additem?productId=@Model.ProductID&quantity=1" class="primary-btn">THÊM VÀO GIỎ HÀNG</a>
                </div>
            </div>
            <div class="col-lg-12">
